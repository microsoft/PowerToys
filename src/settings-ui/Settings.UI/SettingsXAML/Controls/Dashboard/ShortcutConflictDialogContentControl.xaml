<UserControl
    x:Class="Microsoft.PowerToys.Settings.UI.SettingsXAML.Controls.Dashboard.ShortcutConflictDialogContentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.PowerToys.Settings.UI.Controls"
    xmlns:converters="using:Microsoft.PowerToys.Settings.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hotkeyConflicts="using:Microsoft.PowerToys.Settings.UI.Library.HotkeyConflicts"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tkcontrols="using:CommunityToolkit.WinUI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:IntToInvertedVisibilityConverter x:Key="IntToInvertedVisibilityConverter" />
    </UserControl.Resources>

    <Grid MinWidth="500" MaxWidth="600">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Custom Title with PowerToys branding -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
            <Border
                Width="14"
                Height="14"
                CornerRadius="7"
                Background="Transparent"
                BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                BorderThickness="1"
                Margin="0,0,4,0"
                VerticalAlignment="Center">
            </Border>
            <TextBlock
                Text="PowerToys Shortcut conflicts"
                FontSize="16"
                FontWeight="SemiBold"
                VerticalAlignment="Center" />
        </StackPanel>

        <!-- Description text -->
        <TextBlock
            Grid.Row="1"
            Text="Some PowerToys shortcuts conflict with system or other module shortcuts that may cause unexpected behavior. Click on a module card to navigate to its settings."
            Style="{StaticResource BodyTextBlockStyle}"
            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
            TextWrapping="Wrap"
            Margin="0,0,0,24" />

        <!-- Conflicts List -->
        <ScrollViewer 
            Grid.Row="2" 
            MaxHeight="400"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto"
            ZoomMode="Disabled"
            Padding="0,0,8,0">
            <ItemsControl ItemsSource="{x:Bind ConflictItems, Mode=OneWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="hotkeyConflicts:HotkeyConflictGroupData">
                        <StackPanel Margin="0,0,0,32">
                            <!-- Conflict Header -->
                            <StackPanel Margin="0,0,0,12">
                                <!-- Hotkey Header -->
                                <Border
                                    Padding="12,6"
                                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                                    CornerRadius="4"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,8">
                                    <TextBlock
                                        FontFamily="Cascadia Code, Consolas, monospace"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                                        Text="{x:Bind Hotkey.ToString()}" />
                                </Border>

                                <!-- Instruction text -->
                                <TextBlock
                                    Text="The following modules are using this shortcut:"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    FontSize="13" />
                            </StackPanel>

                            <!-- Module Cards and System Conflict Card -->
                            <StackPanel>
                                <!-- PowerToys Module Cards -->
                                <ItemsControl ItemsSource="{x:Bind Modules}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="hotkeyConflicts:ModuleHotkeyData">
                                            <tkcontrols:SettingsCard
                                                Header="{x:Bind ModuleName}"
                                                Description="{x:Bind HotkeyName}"
                                                Margin="0,0,0,4"
                                                HeaderIcon="{ui:BitmapIcon }"
                                                IsClickEnabled="True"
                                                Click="SettingsCard_Click" 
                                                Loaded="SettingsCard_Loaded">
          

                                                <!-- Custom KeyVisual shortcut display -->
                                                <ItemsControl 
                                                    ItemsSource="{x:Bind HotkeySettings.GetKeysList(), Mode=OneWay}"
                                                    Margin="2"
                                                    VerticalAlignment="Center"
                                                    MinWidth="140">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal" Spacing="4" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <controls:KeyVisual
                                                                Height="30"
                                                                Padding="12,4,12,4"
                                                                VerticalAlignment="Center"
                                                                AutomationProperties.AccessibilityView="Raw"
                                                                Content="{Binding}"
                                                                CornerRadius="{StaticResource ControlCornerRadius}"
                                                                FontWeight="SemiBold"
                                                                IsTabStop="False"
                                                                Style="{StaticResource ConflictKeyVisualStyle}" />
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                                <!-- Tooltip for the entire card -->
                                                <ToolTipService.ToolTip>
                                                    <ToolTip Content="{x:Bind HotkeySettings.ConflictDescription, Mode=OneWay}" />
                                                </ToolTipService.ToolTip>
                                            </tkcontrols:SettingsCard>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- System Conflict Card (only show if it's a system conflict) -->
                                <tkcontrols:SettingsCard
                                    Header="System"
                                    Description="Windows system shortcut"
                                    Margin="0,0,0,4"
                                    IsClickEnabled="False"
                                    HeaderIcon="{ui:BitmapIcon Source=/Assets/Settings/Icons/Windows.png}"
                                    Visibility="{x:Bind IsSystemConflict}">

                                    <!-- System shortcut message -->
                                    <TextBlock
                                        Text="This shortcut cannot be changed."
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource TextFillColorDisabledBrush}"
                                        VerticalAlignment="Center"
                                        FontStyle="Italic" />

                                    <!-- Tooltip for system conflict -->
                                    <ToolTipService.ToolTip>
                                        <ToolTip Content="This shortcut is reserved by Windows and cannot be modified." />
                                    </ToolTipService.ToolTip>
                                </tkcontrols:SettingsCard>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Empty State (when no conflicts) -->
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{x:Bind ConflictItems.Count, Mode=OneWay, Converter={StaticResource IntToInvertedVisibilityConverter}}">
            <FontIcon 
                FontFamily="Segoe Fluent Icons"
                Glyph="&#xE73E;"
                FontSize="48"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                HorizontalAlignment="Center"
                Margin="0,0,0,16" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="16"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Text="No conflicts detected" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="14"
                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                Text="All shortcuts are working properly"
                Margin="0,4,0,0" />
        </StackPanel>
    </Grid>
</UserControl>