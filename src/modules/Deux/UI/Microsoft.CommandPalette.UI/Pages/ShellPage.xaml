                            From="1.0"
                            To="0"
                            Duration="0:0:0.187" />
                        <animations:TranslationAnimation
                            From="0,0,0"
                            To="24,0,0"
                            Duration="0:0:0.187" />
                    </animations:Implicit.HideAnimations>
                    <Grid Margin="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
