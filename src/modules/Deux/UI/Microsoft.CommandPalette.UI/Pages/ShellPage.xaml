                                EasingMode="EaseIn"
                                EasingType="Cubic"
                                From="0"
                                To="1.0"
                                Duration="0:0:0.187" />
                            <animations:ScaleAnimation
                                EasingMode="EaseIn"
                                EasingType="Cubic"
                                From="0.5"
                                To="1"
                                Duration="0:0:0.187" />
                        </animations:Implicit.ShowAnimations>
                        <animations:Implicit.HideAnimations>
                            <animations:OpacityAnimation
                                EasingMode="EaseOut"
                                EasingType="Cubic"
                                From="1.0"
                                To="0"
                                Duration="0:0:0.187" />
                            <animations:ScaleAnimation
                                EasingMode="EaseOut"
                                EasingType="Cubic"
                                From="1"
                                To="0.5"
                                Duration="0:0:0.187" />
                        </animations:Implicit.HideAnimations>
                    </Image>
