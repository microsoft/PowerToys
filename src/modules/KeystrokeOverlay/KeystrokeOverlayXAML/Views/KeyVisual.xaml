<UserControl
    x:Class="KeystrokeOverlayUI.KeyVisual"
	xmlns:local="using:KeystrokeOverlayUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border Background="{x:Bind KeyBackground, Mode=OneWay}"
            CornerRadius="4"
            Padding="12,6"
            MinWidth="40"
            MinHeight="40"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
        <TextBlock Text="{x:Bind KeyText, Mode=OneWay}"
                   FontSize="24"
                   Foreground="{x:Bind KeyForeground, Mode=OneWay}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"/>
    </Border>
</UserControl>
