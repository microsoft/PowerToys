<UserControl
    x:Class="FancyZonesEditor.GridZone"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FancyZonesEditor"
    xmlns:props="clr-namespace:FancyZonesEditor.Properties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource GridZoneBackgroundBrush}"
    BorderBrush="{DynamicResource SystemControlBackgroundAccentBrush}"
    BorderThickness="1"
    Opacity="1"
    Focusable="True"
    IsTabStop="True"    
    ui:ControlHelper.CornerRadius="4"
    mc:Ignorable="d">
    
    <Grid x:Name="Frame">
        <Canvas x:Name="Body" />
        <DockPanel HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            <Label
                Name="LabelID"
                DockPanel.Dock="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="ID"
                FontWeight="SemiBold"
                FontSize="64"
                Foreground="{DynamicResource PrimaryForegroundBrush}" />
            <TextBlock FontSize="16"
                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                       DockPanel.Dock="Bottom"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                     <Run x:Name="WidthLabel" />
                     <Run Text="&#xE106;"
                          FontSize="10"
                          FontFamily="Segoe MDL2 Assets" />
                    <Run x:Name="HeightLabel" />
            </TextBlock>

        </DockPanel>
        <!--<TextBlock Margin="2" Text="Shift Key switches direction&#13;Ctrl  Key repeats"/>-->
    </Grid>
</UserControl>
