<UserControl x:Class="AnimatedGifRecorder.Views.SampleToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnimatedGifRecorder.Views"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800"
             Height="50">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Name="CaptureButton" Content="Capture" Click="CaptureButton_Click"/>
            <Separator/>
            <Button Name="RecordPauseButton" Tag="Record" Click="RecordPauseButton_Click">
                <Image Name="RecordPauseImage" Source="/AnimatedGifRecorder;component/Resources/media-record-8x.png"/>
            </Button>
            <Button Name="StopButton" Tag="Stop" Click="StopButton_Click">
                <Image Source="/AnimatedGifRecorder;component/Resources/media-stop-8x.png"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
