<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Microsoft.CmdPal.UI.Settings.InternalPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="1">
            <Grid Padding="16">
                <StackPanel
                    MaxWidth="1000"
                    HorizontalAlignment="Stretch"
                    Spacing="{StaticResource SettingsCardSpacing}">

                    <TextBlock Text="Tools on this page are for internal use only. This page is not visible in Release builds."  Style="{StaticResource BodyTextBlockStyle}" />

                    <!-- Exception Handling Section -->
                    <TextBlock Text="Exception Handling"  Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" />
                    <controls:SettingsExpander
                        Header="Throw exceptions"
                        Description="Actions for testing global exception handling from the application"
                        HeaderIcon="{ui:FontIcon Glyph=&#xE783;}"
                        IsExpanded="True">
                        <controls:SettingsExpander.Items>
                            <controls:SettingsCard Header="Throw an unhandled exception from UI thread">
                                <Button
                                    Click="ThrowPlainMainThreadException_Click"
                                    Content="Throw" />
                            </controls:SettingsCard>
                            <controls:SettingsCard Header="Throw an unhandled exception from UI thread (with PIIs)">
                                <Button
                                    Click="ThrowPlainMainThreadExceptionPiis_Click"
                                    Content="Throw" />
                            </controls:SettingsCard>
                            <controls:SettingsCard Header="Throw unobserved exception from a task" Description="Throw with delay, when the task is collected by the GC">
                                <Button
                                    Click="ThrowExceptionInUnobservedTask_Click"
                                    Content="Throw" />
                            </controls:SettingsCard>
                        </controls:SettingsExpander.Items>
                    </controls:SettingsExpander>

                    <!-- Diagnostics Section -->
                    <TextBlock Text="Diagnostics"  Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" />
                    <controls:SettingsCard ActionIcon="{ui:FontIcon Glyph=&#xE838;}"
                                           ActionIconToolTip="Open logs folder"
                                           Click="OpenLogsCardClicked"
                                           Description="Opens the folder with Command Palette logs."
                                           Header="Open logs folder"
                                           HeaderIcon="{ui:FontIcon Glyph=&#xF7BB;}"
                                           IsClickEnabled="True" />


                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
